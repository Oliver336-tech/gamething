  "dependencies": {
    "@gamething/engine": "file:../engine",
    "@gamething/shared": "file:../shared",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2"
  }
}
